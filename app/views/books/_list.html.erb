  <h1>User info</h1>
  <div><%= attachment_image_tag user,  :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%></div>
    <table class = "table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
    <div class = "row">
          <% if user == current_user %>
            <p><%= link_to  edit_user_path(user),method: :get do %></p>
              <i class= "btn-outline-secondary btn-block fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </div>
 
  <h2 class = "mt-3">New book</h2>
    <%= form_with model: newbook, local:true do |f| %>
      <div class = "form-group">
  <label for = "book_title">Title</label>
  <%= f.text_field :title, class: "form-control" %>
</div>
      <div class = "form-group">
  <label for = "book_opinion">Opinion</label>
    <%= f.text_field :body, class: "form-control" %>
</div>
      <div class = "form-group" >
  <%= f.submit 'Create Book', class:"btn btn-success" %>
</div>
    <% end %>
 
  

 
  